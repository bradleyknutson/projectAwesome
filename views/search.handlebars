<div class="container form-container mb-5 animated slideInRight">
  <form id="search-form">
    <div class="form-group">
      <label for="name-input">Name</label>
      <input type="text" class="form-control" required id="name-input" value="{{search.dataValues.name}}" placeholder="required">
    </div>
    <div class="form-group">
      <label for="type-input">Animal Type</label>
      <input type="text" class="form-control" required id="type-input" placeholder="required">
    </div>
    <div class="form-group">
      <label for="breed-input">Breed</label>
      <input type="text" class="form-control" id="breed-input" placeholder="Breed">
    </div>
    <div class="form-group">
      <label for="age-input">Age</label>
      <input type="text" class="form-control" id="age-input" placeholder="Age">
    </div>
    <div class="form-group">
      <label for="gender-select">Gender</label>
      <select class="form-control" id="gender-select">
        <option selected value="">Choose...</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>
    <div class="form-group">
      <label for="children-select">Good with Children</label>
      <select class="form-control" id="children-select">
        <option selected disabled value="">Choose...</option>
        <option value="1">Yes</option>
        <option value="0">No</option>
      </select>
    </div>
    <div class="form-group">
      <label for="dogs-select">Good with Dogs</label>
      <select class="form-control" id="dogs-select">
        <option selected disabled value="">Choose...</option>
        <option value="1">Yes</option>
        <option value="0">No</option>
      </select>
    </div>
    <div class="form-group">
      <label for="cats-select">Good with Cats</label>
      <select class="form-control" id="cats-select">
        <option selected disabled value="">Choose...</option>
        <option value="1">Yes</option>
        <option value="0">No</option>
      </select>
    </div>
    <div class="form-group">
      <label for="zip-input">Zip Code</label>
      <input type="text" class="form-control" required id="zip-input" placeholder="Zip Code">
    </div>
    <div class="form-group">
      <h5>Email me when new pets are available</h5>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="email-radio-yes" id="email-radio-yes" value="yes" checked>
        <label class="form-check-label" for="email-radio-yes">
          Yes
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="email-radio-no" id="email-radio-no" value="no">
        <label class="form-check-label" for="email-radio-no">
          No
        </label>
      </div>
    </div>
    <button type="submit" id="animal-search-submit" class="btn btn-primary btn-lg btn-block">Submit</button>
  </form>
</div>